extends layout

block content
    .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
        .container-fluid
            .navbar-header
                button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                    span.sr-only Toggle Navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href='#') 건설현장 인력 안전 모니터링
            .navbar-collapse.collapse
                form.navbar-form.navbar-right
                    input.form-control(type='text', placeholder='검색')
                ul.nav.navbar-nav.navbar-right
                    li.dropdown
                        a.dropdown-toggle(href='#', data-toggle='dropdown') 설정
                        ul.dropdown-menu
                            li.dropdown-header 서버 연결 설정
                            li
                                a(href='#oops', data-toggle='modal') 접속 서버 설정
                            li
                                a(href='#oops', data-toggle='modal') DB 설정
                            li.divider
                            li.dropdown-header 인력 설정
                            li
                                a(href='#oops', data-toggle='modal') 사용자 조회
                    li.dropdown
                        a.dropdown-toggle(href='#', data-toggle='dropdown') 개발자
                        ul.dropdown-menu
                            li
                                a(href='#serialDebug', data-toggle='modal') Serial Dump
                            li
                                a(href='#parsingDebug', data-toggle='modal') Parsing States
                            li.divider
                            li
                                a(href='#oops', data-toggle='modal') Debug setting
    .container-fluid
        .row
            .col-sm-3.col-md-2.sidebar
                ul.nav.nav-sidebar
                    li.active
                        a(href='#') 인력 모니터링
                    li
                        a(href='#') 전부 보기
                    li
                        a(href='#') 건설현장 A
                    li
                        a(href='#') 건설현장 B
                    li
                        a(href='#') 건설현장 C
                ul.nav.nav-sidebar
                    li.active
                        a(href='#') 서버 모니터링
                    li
                        a(href='#') 서버 상태 확인
                    li
                        a(href='#') 중계기 상태 확인
            .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
                h1.page-header 전부 보기
                .table-responsive
                    table.table.table-striped
                        thead
                            tr
                                th #
                                th 이름
                                th 위치
                                th 턱끈착용
                        tbody
                            tr
                                td 1
                                td 조종식
                                td B
                                td
                                    span.glyphicon.glyphicon-remove.strap-no
                            tr
                                td 2
                                td 홍건수
                                td A
                                td
                                    span.glyphicon.glyphicon-ok.strap-yes
                            tr
                                td 3
                                td 박상현
                                td C
                                td
                                    span.glyphicon.glyphicon-ok.strap-yes
    //
        Modal Form for Serial Debugging ...
    .modal.fade(id="serialDebug", tabindex="-1", role="dialog", aria-labelledby="serialDebugLabel", aria-hidden="false")
        .modal-dialog
            .modal-content
                .modal-header
                    button.close(type="button", data-dismiss="modal", aria-hidden="false") &times;
                    h4.modal-title(id="serialDebugLabel") Serial Dumping Console
                .modal-body
                    p Serial Dumping from Receive node ...
                    ul.debugConsole(id='serialDumpContents')
                .modal-footer
                    .row
                        .col-lg-6.col-xs-6
                            .checkbox(style="text-align:left")
                                label
                                    input(id="scrollLock", type="checkbox", checked="checked")
                                    span scroll lock
                        .col-lg-6.col-xs-6
                            button.btn.btn-primary(type='button', data-dismiss='modal') Close
    //
        Modal Form for Parsing Debugging ...
    .modal.fade(id="parsingDebug", tabindex="-1", role="dialog", aria-labelledby="parsingDebugLabel", aria-hidden="false")
        .modal-dialog
            .modal-content
                .modal-header
                    button.close(type="button", data-dismiss="modal", aria-hidden="false") &times;
                    h4.modal-title(id="parsingDebugLabel") Parsing State Console
                .modal-body
                    p Server Parsing State ...
                    ul.debugConsole(id='parsingDumpContents')
                .modal-footer
                    .row
                        .col-lg-6.col-xs-6
                            .checkbox(style="text-align:left")
                                label
                                    input(id="scrollLockParsing", type="checkbox", checked="checked")
                                    span scroll lock
                        .col-lg-6.col-xs-6
                            button.btn.btn-primary(type='button', data-dismiss='modal') Close
    //
        Modal Form for Error Message ...
    .modal.fade(id="oops", tabindex="-1", role="dialog", aria-labelledby="oopsLabel", aria-hidden="false")
        .modal-dialog
            .modal-content
                .modal-header
                    button.close(type="button", data-dismiss="modal", aria-hidden="false") &times;
                    h4.modal-title(id="oopsLabel") OOPS! NOT Supported
                .modal-body(style="text-align:center;")
                    h1(style="font-size:75px")
                        span.glyphicon.glyphicon-exclamation-sign
                    h1 OOPS!
                    h3 This Functions is not supported yet
                .modal-footer
                    button.btn.btn-primary(type='button', data-dismiss='modal') Close